<!-- Sign-Up Modal -->
<div
  class="modal fade"
  id="sign-up-modal"
  tabindex="-1"
  aria-labelledby="sign-up-modal-label"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <form action="/user/sign-up" method="POST">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="sign-up-modal-label">Sign Up</h1>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
        </div>
        <div class="modal-body text-start">
          <div class="mb-3 mt-2">
            <label for="email" class="form-label">Email address</label>
            <input
              type="email"
              class="form-control"
              id="email"
              name="username"
              placeholder="name@example.com"
              required
            />
          </div>

          <div class="mb-3 mt-2">
            <label for="name" class="form-label">Name</label>
            <input
              type="name"
              class="form-control"
              id="name"
              name="name"
              placeholder="Ahmed Ali"
              required
              minlength="3"
            />
          </div>

          <div class="mb-3 mt-2">
            <label for="date-of-birth" class="form-label">Date of Birth</label>
            <input
              type="date"
              class="form-control"
              id="date-of-birth"
              name="date_of_birth"
              required
              value="2000-01-01"
            />
          </div>

          <div class="mb-3 mt-2">
            <label for="password" class="form-label">Password</label>
            <input
              type="password"
              class="form-control"
              id="password"
              name="password"
              minlength="8"
              required
            />
          </div>

          <div class="alert-on-error" id="sign-up-alert"></div>
        </div>
        <div class="modal-footer justify-content-between">
          <div>
            <a
              class="link-primary link"
              data-bs-toggle="modal"
              data-bs-target="#sign-in-Modal"
              >Already a Member? Sign In</a
            >
          </div>

          <div>
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >
              Close
            </button>
            <button type="submit" class="btn btn-primary">Sign Up</button>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>

